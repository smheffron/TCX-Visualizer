<UserControl x:Class="TCX_Visualizer.View.Cadence"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TCX_Visualizer.View"
             xmlns:oxy="http://oxyplot.org/wpf"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" Background="#f5f5f5">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1.05*" />
            <ColumnDefinition Width=".38*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*" />
        </Grid.RowDefinitions>
        <oxy:Plot Title="Cadence" Grid.Row="0" Grid.Column="0" PlotAreaBorderColor="#757575" TextColor="#757575" Background="#F5F5F5">
            <oxy:Plot.Axes>
                <oxy:TimeSpanAxis StringFormat="hh:mm" Position="Bottom" Title="Time (hh:mm)" IsZoomEnabled="True" IsPanEnabled="True" AbsoluteMaximum="{Binding CadenceData.Max}" AbsoluteMinimum="{Binding CadenceData.Min}" TicklineColor="#757575" />
                <oxy:LinearAxis Position="Left" Title="Cadence (rpm)" IsZoomEnabled="False" IsPanEnabled="False" TicklineColor="#757575"/>
            </oxy:Plot.Axes>
            <oxy:Plot.Series>
                <oxy:LineSeries ItemsSource="{Binding CadenceData.Points}" Color="LightGreen"/>
            </oxy:Plot.Series>
        </oxy:Plot>
        <TextBlock Grid.Row="0" Grid.Column="1" FontWeight="Bold" FontSize="20" Text="{Binding CadenceInfo}" VerticalAlignment="Center" Padding="10px" Margin="40 0 0 0" Foreground="#757575" ></TextBlock>
    </Grid>
</UserControl>
