<UserControl x:Class="TCX_Visualizer.View.Laps"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TCX_Visualizer.View"
             mc:Ignorable="d" 
             xmlns:oxy="http://oxyplot.org/wpf"
             d:DesignHeight="450" d:DesignWidth="800" Background="#f1f1f1">
    <Grid>
        <oxy:Plot Title="Laps" IsLegendVisible="False" PlotAreaBorderColor="#757575" TextColor="#757575" Background="#F5F5F5">
            <oxy:Plot.Axes>
                <oxy:CategoryAxis Position="Bottom" Title="Lap" IsZoomEnabled="True" IsPanEnabled="True" TicklineColor="#757575" AbsoluteMaximum="{Binding LapData.Max}" AbsoluteMinimum="{Binding LapData.Min}" />
            <oxy:LinearAxis Position="Left" Title="{Binding SelectedLapData}" IsZoomEnabled="False" IsPanEnabled="False" TicklineColor="#757575"/>
            </oxy:Plot.Axes>
            <oxy:Plot.Series>
                <oxy:ColumnSeries Title="{Binding SelectedLapData}" ItemsSource="{Binding LapData.Points}" Width="50" Foreground="#757575" />
            </oxy:Plot.Series>
         </oxy:Plot>
    </Grid>
</UserControl>
