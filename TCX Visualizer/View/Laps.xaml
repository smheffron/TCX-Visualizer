<UserControl x:Class="TCX_Visualizer.View.Laps"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TCX_Visualizer.View"
             mc:Ignorable="d" 
             xmlns:oxy="http://oxyplot.org/wpf"
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <oxy:Plot Title="Laps">
            <oxy:Plot.Axes>
                <oxy:CategoryAxis Position="Bottom" Title="Lap" IsZoomEnabled="False" IsPanEnabled="False" AbsoluteMaximum="{Binding LapData.Max}" AbsoluteMinimum="{Binding LapData.Min}" />
                <oxy:CategoryAxis Position="Left" Title="Time" IsZoomEnabled="False" IsPanEnabled="False" AbsoluteMaximum="100" AbsoluteMinimum="0"/>
            </oxy:Plot.Axes>
            <oxy:Plot.Series>
                <oxy:ColumnSeries ItemsSource="{Binding LapData.Points}" Color="LightCoral" Width="50" />
            </oxy:Plot.Series>
        </oxy:Plot>
    </Grid>
</UserControl>
